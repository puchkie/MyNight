<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rlsoftware.mynight.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Hello"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/tvTitle"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Night Clubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNightClub"
            android:layout_weight="1" />

        <Button
            android:text="Add Nightclub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddNightClub"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Escape Rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEscapeRoom"
            android:layout_weight="1" />

        <Button
            android:text="Pubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPubs"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
